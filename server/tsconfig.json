{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "lib": ["DOM", "ES2021"],
    "skipLibCheck": true,

    // TODO: Turn this on when we get enough coverage
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "noEmit": true,
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "*": ["./node_modules/*", "./types/*"],
      "@server/*": ["./server/src/*"],
      "@thorium/*": ["./shared/*"]
    }
  },
  "include": ["src/**/*", "../shared"]
}
