{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "lib": ["DOM","ES2020"],
    "skipLibCheck": true,

    // TODO: Turn this on when we get enough coverage
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "../tempServer",
    "baseUrl": ".",
    "paths": {
      "*": ["../node_modules/*", "../types/*"],
      "@server/*": ["./src/*"]
    }
  },
  "include": ["./**/*"]
}
