{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "skipLibCheck": true,
    "lib":["ES2019"],

    // TODO: Turn this on when we get enough coverage
    "noImplicitAny": false,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "../tempServer",
    "baseUrl": ".",
    "paths": {
      "*": ["../node_modules/*", "../types/*"],
      "~*": ["./*"]
    }
  },
  "include": ["./**/*"],
}
