{
  "name": "thorium-server",
  "version": "0.4.7",
  "description": "Starship Simulator Controls Server, built with GraphQL",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thorium-Sim/thorium.git"
  },
  "author": "Alex Anderson <alexanderson1993@gmail.com>",
  "bugs": {
    "url": "https://github.com/Thorium-Sim/thorium/issues"
  },
  "license": "Apache-2.0",
  "homepage": "https://thoriumsim.com",
  "scripts": {
    "start": "nodemon ./src/server.js -e js,graphql --ignore snapshots/ --exec babel-node",
    "build": "npm-run-all build-js copy-files",
    "build-js": "NODE_ENV=production babel src -d build -q",
    "clean": "rm -rf node_modules",
    "clean-build": "rm -rf build",
    "copy-files": "cp -r src/crew build/crew",
    "test": "jest"
  },
  "dependencies": {
    "appdirectory": "^0.1.0",
    "body-parser": "^1.18.3",
    "bonjour": "^3.5.0",
    "chalk": "^2.4.1",
    "change-case": "^3.0.2",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-status-monitor": "^1.1.5",
    "graphql": "^0.13.2",
    "graphql-server-express": "^1.4.0",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.1.1",
    "jest": "^23.5.0",
    "luxon": "^1.3.3",
    "multer": "^1.3.1",
    "ncp": "^2.0.0",
    "node-fetch": "^2.2.0",
    "random-words": "^1.1.0",
    "react-dev-utils": "^5.0.1",
    "semver": "^5.5.0",
    "subscriptions-transport-ws": "^0.9.14",
    "three": "^0.95.0",
    "unzip": "^0.1.11",
    "uuid": "^3.3.2",
    "yauzl": "^2.10.0",
    "yazl": "^2.4.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-3": "^6.24.1",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "regenerator-runtime": "^0.12.1"
  }
}
