{
  "name": "thorium",
  "version": "0.2.0",
  "private": true,
  "description": "Node + React + GraphQL simulator controls",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thorium-Sim/thorium.git"
  },
  "author": "Alex Anderson <alexanderson1993@gmail.com>",
  "bugs": {
    "url": "https://github.com/Thorium-Sim/thorium/issues"
  },
  "license": "Apache-2.0",
  "homepage": "https://thoriumsim.com",
  "devDependencies": {
    "all-contributors-cli": "^4.10.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-plugin-preval": "^1.6.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "husky": "^0.14.3",
    "jest-localstorage-mock": "^2.1.0",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.13.3",
    "pkg": "^4.3.0-beta.1",
    "prettier": "^1.9.2",
    "react-scripts": "1.0.17"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.0.0",
    "apollo-client": "^2.0.1",
    "apollo-link-http": "^1.0.0",
    "apollo-link-ws": "^1.0.0",
    "appdirectory": "^0.1.0",
    "body-parser": "^1.18.2",
    "bodymovin": "^4.12.3",
    "bonjour": "^3.5.0",
    "bootstrap": "^4.0.0-beta.2",
    "chalk": "^2.3.0",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-status-monitor": "^1.0.1",
    "graphql": "^0.11.7",
    "graphql-server-express": "^1.3.1",
    "graphql-server-express-upload": "^1.0.0",
    "graphql-subscriptions": "^0.5.4",
    "graphql-tag": "^2.5.0",
    "graphql-tools": "^2.14.0",
    "gsap": "^1.20.3",
    "jsonfile": "^4.0.0",
    "lodash": "^4.17.4",
    "moment": "^2.19.1",
    "multer": "^1.3.0",
    "ncp": "^2.0.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "prop-types": "^15.6.0",
    "random-words": "0.0.1",
    "react": "^16.0.0",
    "react-addons-transition-group": "^15.6.2",
    "react-animated-number": "^0.4.3",
    "react-apollo": "^2.0.0",
    "react-color": "^2.13.8",
    "react-dom": "^16.0.0",
    "react-draggable": "^3.0.3",
    "react-fontawesome": "^1.6.1",
    "react-measure": "^2.0.2",
    "react-popper": "^0.7.4",
    "react-rangeslider": "^2.2.0",
    "react-router": "^3.2.0",
    "react-sortable-hoc": "^0.6.8",
    "react-table": "^6.7.4",
    "react-transition-group": "^2.2.1",
    "reactour": "^1.6.2",
    "reactstrap": "^5.0.0-alpha.3",
    "request": "^2.83.0",
    "sine-waves": "^0.3.0",
    "subscriptions-transport-ws": "^0.9.1",
    "three": "^0.89.0",
    "tinycolor2": "^1.4.1",
    "yauzl": "^2.9.1",
    "yazl": "^2.4.3"
  },
  "scripts": {
    "start-server": "nodemon ./server/server.js -e js,graphql --ignore snapshots/ --ignore src/ --exec babel-node",
    "start": "npm run start-server & npm run start-client",
    "start-js": "react-scripts start",
    "start-client": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build-client": "npm-run-all build-css build-js",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "build-server": "node ./config/build-server.js",
    "build": "npm run build-client && npm run build-server",
    "lint": "eslint .",
    "cloc": "cloc . --exclude-dir=node_modules,config,scripts,build-server,snapshots",
    "test:client": "react-scripts test --env=jsdom",
    "test:server": "jest server/tests --env=node",
    "test": "npm run test:client & npm run test:server",
    "flow": "flow",
    "precommit": "lint-staged",
    "add": "all-contributors add",
    "generate": "all-contributors generate",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "bin": "./app.js",
  "pkg": {
    "assets": [
      "assets/**/*",
      "snapshot.json",
      "index.html",
      "css/**/*",
      "fonts/**/*",
      "js/**/*",
      "static/**/*"
    ]
  }
}
