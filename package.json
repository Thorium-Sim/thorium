      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/node_modules/{typescript,@babel,eslint}/**",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
