{
  "name": "thorium",
  "version": "2.12.4",
  "description": "Starship Simulator Controls",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Thorium-Sim/thorium.git"
  },
  "author": "Alex Anderson <alexanderson1993@gmail.com>",
  "bugs": {
    "url": "https://github.com/Thorium-Sim/thorium/issues"
  },
  "license": "Apache-2.0",
  "main": "./public/electron.js",
  "homepage": "/",
  "languages": [
    "es",
    "fr",
    "it",
    "nl",
    "de"
  ],
  "scripts": {
    "start": "npm-run-all --parallel start:client start:server",
    "postinstall": "patch-package",
    "start:client": "react-app-rewired start",
    "start:server": "ts-node-dev --project server/tsconfig.json server/index.ts",
    "watch:electron": "wait-on http://localhost:3000 && electron .",
    "start:electron": "BROWSER=none npm-run-all --parallel -l start:client watch:server watch:electron",
    "build": "cross-env NODE_ENV=production npm-run-all build:* sentry:upload",
    "build:client": "react-app-rewired --max_old_space_size=4096 build",
    "build:server": "tsc -p server",
    "build:ncc": "ncc build -o build/server -s tempServer/server/index.js",
    "build:env": "node ./scripts/build-env.js",
    "build:copy": "cp package.json build/package.json",
    "generate:schema": "get-graphql-schema http://localhost:3001/graphql > src/schema.graphql",
    "generate:electron": "electron-builder -mwl",
    "generate:apollo": "apollo service:push",
    "dist:electron": "electron-builder -mwl -p always",
    "pack:electron": "electron-builder -m",
    "generate:pkg": "NODE_ENV=production pkg build/package.json",
    "test": "is-ci test:plain test:watch",
    "test:watch": "jest --watch",
    "test:plain": "jest",
    "sentry:upload": "node ./scripts/sentryFiles.js",
    "translate": "babel-node scripts/manageTranslations.js",
    "plop": "plop",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "eject": "react-app-rewired eject",
    "lint": "eslint .",
    "typecheck": "npm-run-all --parallel typecheck:client typecheck:server",
    "typecheck:client": "tsc --noEmit",
    "typecheck:server": "tsc --noEmit -p server",
    "stylelint": "stylelint ./src",
    "bump": "node ./scripts/bumpVersion.js",
    "generate:graphql": "graphql-codegen --config codegen.yml",
    "format": "prettier --write \"**/*.+(js|jsx|yml|yaml|css|less|scss|ts|tsx|md|mdx|graphql|vue)\"",
    "format:different": "prettier --list-different \"**/*.+(js|jsx|yml|yaml|css|less|scss|ts|tsx|md|mdx|graphql|vue)\"",
    "validate": "CI=true npm-run-all --parallel test:plain typecheck format:different",
    "lint-staged-validate": "lint-staged",
    "storybook": "start-storybook -p 9009 -s public,./",
    "analyze": "source-map-explorer 'build/static/js/*.js'"
  },
  "proxy": "http://localhost:3001",
  "nodemonConfig": {
    "watch": ["server/"],
    "ignore": [
      ".git",
      "./src/*",
      "./public/*",
      "./.config/*",
      "./types/*"
    ]
  },
  "browserslist": [
    "maintained node versions",
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all --parallel lint-staged-validate typecheck"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint"],
    "*.{css,scss}": ["stylelint"],
    "**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx|graphql|vue)": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
