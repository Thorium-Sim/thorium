    "reactstrap": "^5.0.0-beta",
    "request": "^2.83.0",
    "semver": "^5.5.0",
    "sine-waves": "^0.3.0",
    "subscriptions-transport-ws": "^0.9.5",
    "three": "^0.90.0",
    "three-obj-loader": "^1.1.3",
    "tinycolor2": "^1.4.1",
    "yauzl": "^2.9.1",
    "yazl": "^2.4.3"
  },
  "scripts": {
    "start-server":
      "nodemon ./server/server.js -e js,graphql --ignore snapshots/ --ignore src/ --exec babel-node",
    "start": "npm run start-server & npm run start-client",
    "start-js": "react-scripts start",
    "start-client": "npm-run-all -p watch-css start-js",
    "build-js": "GENERATE_SOURCEMAP=false react-scripts build",
    "build-client": "npm-run-all build-css build-js",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css":
      "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "build-server":
      "rm -f ./node_modules/normalize.css/normalize.css && node ./config/build-server.js",
    "build": "npm run build-client && npm run build-server",
    "lint": "eslint .",
    "cloc":
      "cloc . --exclude-dir=node_modules,config,scripts,build-server,snapshots,coverage,build --exclude-ext=css,json",
    "test:client": "react-scripts test --env=jsdom",
    "test:server": "jest server/tests --env=node",
    "test": "npm run test:client & npm run test:server",
    "flow": "flow",
    "precommit": "lint-staged",
    "add": "all-contributors add",
    "generate": "all-contributors generate",
    "eject": "react-scripts eject",
    "plop": "plop"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"]
  },
  "jest": {
    "coverageReporters": ["lcov", "text-summary"]
  },
  "bin": "./app.js",
  "proxy": {
    "/assets": {
      "target": "http://localhost:3001"
    }
  },
  "pkg": {
    "assets": [
      "assets/**/*",
      "snapshot.json",
      "index.html",
      "css/**/*",
      "fonts/**/*",
      "js/**/*",
      "static/**/*",
      "cardIcons/**/*",
      "parts/**/*",
      "viewscreen/**/*",
      "sciences.ogg",
      "favicon.ico"
    ]
  }
}
