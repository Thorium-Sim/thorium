  "homepage": "https://thoriumsim.com",
  "scripts": {
    "start-server": "nodemon ./server/server.js -e js,graphql --ignore snapshots/ --ignore src/ --exec babel-node",
    "start": "concurrently --kill-others-on-fail \"npm run start-server\" \"npm run start-client\"",
    "start-client": "node scripts/start.js",
    "build-js": "cross-env node scripts/build.js",
    "build-client": "npm-run-all translate build-js",
    "build-server": "NODE_ENV=production babel server -d build && cp -r server/crew build/crew && cp package.json build/package.json",
    "pkg": "pkg build/package.json",
    "zip": "mkdir -p zips && zip -r zips/thorium-macos.zip thorium-macos && zip -r zips/thorium-win.exe.zip thorium-win.exe && zip -r zips/thorium-linux.zip thorium-linux",
    "build": "npm run build-client && npm run build-server && npm run pkg",
    "lint": "eslint .",
    "cloc": "cloc . --exclude-dir=node_modules,config,scripts,build-server,snapshots,coverage,build --exclude-ext=css,json",
    "test:client": "node scripts/test.js -c .clientJest.json --env=jsdom",
    "test:server": "node scripts/test.js -c .serverJest.json",
    "test": "concurrently --kill-others-on-fail \"npm run test:client\" \"npm run test:server\"",
    "translate": "babel-node scripts/manageTranslations.js",
    "upload": "node scripts/uploadTos3.js",
    "deploy": "npm run build && npm run zip && npm run upload",
    "flow": "flow",
    "precommit": "lint-staged",
    "add-contributor": "all-contributors add",
    "generate-contributor": "all-contributors generate",
    "plop": "plop"
  },
