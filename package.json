  "scripts": {
    "start-server": "nodemon ./server.js -e js,graphql --ignore snapshots/ --ignore src/ --exec babel-node",
    "start-client": "node scripts/start.js",
    "start": "npm run start-server & npm run start-client",
    "build": "node scripts/build.js",
    "build-server": "npm run build && node ./scripts/build-electron-server.js",
    "lint": "eslint .",
    "cloc": "cloc . --exclude-dir=node_modules,config,scripts",
    "test-server": "cross-env NODE_ENV=test ./node_modules/.bin/nyc --reporter=lcov --reporter=text mocha --require babel-register --require babel-polyfill test/server/*.js test/server/**/*.js",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/.bin/codacy-coverage && rm -rf ./coverage",
    "test": "npm run test-server && npm run coverage"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "jest": {
    "moduleFileExtensions": [
      "jsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/FileStub.js",
      "^.+\\.css$": "<rootDir>/config/jest/CSSStub.js"
    },
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(build|docs|node_modules)/"
    ],
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "react-app"
    ],
    "globals": {
      "window": true,
      "log": true
    },
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0,
      "indent": 0,
      "import/namespace": 0,
      "max-len": 0,
      "comma-dangle": 0,
      "no-underscore-dangle": 0
    },
    "env": {
      "mocha": true
    }
  }
}
