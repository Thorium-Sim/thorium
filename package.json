  "name": "thorium",
  "version": "0.2.6",
  "private": true,
  "description": "Node + React + GraphQL simulator controls",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thorium-Sim/thorium.git"
  },
  "author": "Alex Anderson <alexanderson1993@gmail.com>",
  "bugs": {
    "url": "https://github.com/Thorium-Sim/thorium/issues"
  },
  "license": "Apache-2.0",
  "homepage": "https://thoriumsim.com",
  "devDependencies": {
    "all-contributors-cli": "^4.10.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-plugin-preval": "^1.6.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "husky": "^0.14.3",
    "inquirer-directory": "^2.1.0",
    "inquirer-file-path": "^1.0.0",
    "inquirer-recursive": "0.0.5",
    "jest-localstorage-mock": "^2.2.0",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.15.1",
    "pkg": "^4.3.0",
    "plop": "^1.9.1",
    "prettier": "^1.10.2",
    "react-scripts": "1.1.1"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.9",
    "apollo-client": "^2.2.5",
    "apollo-link-ws": "^1.0.6",
    "apollo-link-http": "^1.5.1",
    "appdirectory": "^0.1.0",
    "body-parser": "^1.18.2",
    "bodymovin": "^4.13.0",
    "bonjour": "^3.5.0",
    "bootstrap": "^4.0.0",
    "capitalize": "^1.0.0",
    "chalk": "^2.3.1",
    "change-case": "^3.0.1",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-status-monitor": "^1.0.1",
    "graphql": "^0.13.0",
    "graphql-server-express": "^1.3.2",
    "graphql-server-express-upload": "^1.0.0",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tag": "^2.8.0",
    "graphql-tools": "^2.21.0",
    "greek-utils": "^1.2.1",
    "gsap": "^1.20.4",
    "jsonfile": "^4.0.0",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "multer": "^1.3.0",
    "ncp": "^2.0.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.6.0",
    "random-words": "0.0.1",
    "react": "^16.0.0",
    "react-addons-transition-group": "^15.6.2",
    "react-animated-number": "^0.4.4",
    "react-apollo": "^2.0.4",
    "react-color": "^2.13.8",
    "react-dom": "^16.0.0",
    "react-draggable": "^3.0.5",
    "react-fontawesome": "^1.6.1",
