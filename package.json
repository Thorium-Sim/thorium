{
  "name": "thorium",
  "version": "1.2.0",
  "description": "Starship Simulator Controls",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thorium-Sim/thorium.git"
  },
  "author": "Alex Anderson <alexanderson1993@gmail.com>",
  "bugs": {
    "url": "https://github.com/Thorium-Sim/thorium/issues"
  },
  "license": "Apache-2.0",
  "homepage": "https://thoriumsim.com",
  "scripts": {
    "start": "npm-run-all --parallel start-server start-client",
    "start-server": "npm start --prefix server",
    "start-client": "npm start --prefix client",
    "postinstall": "npm-run-all --parallel install-server install-client",
    "install-server": "npm install --prefix server",
    "install-client": "npm install --prefix client",
    "clean-all": "npm-run-all clean-build clean",
    "clean": "npm-run-all --parallel clean-main clean-client clean-server",
    "clean-main": "rm -r node_modules",
    "clean-client": "npm run clean --prefix client",
    "clean-server": "npm run clean --prefix server",
    "clean-build": "npm-run-all --parallel clean-build-main clean-build-client clean-build-server",
    "clean-build-main": "rm -rf build && rm -rf zip",
    "clean-build-client": "npm run clean-build --prefix client",
    "clean-build-server": "npm run clean-build --prefix server",
    "test": "npm-run-all --parallel test-client test-server",
    "test-server": "npm t --prefix server",
    "test-client": "npm t --prefix client",
    "test-e2e": "is-ci \"test-e2e-run\" \"test-e2e-dev\"",
    "test-e2e-run": "start-server-and-test start http://localhost:3001 cy-run",
    "test-e2e-dev": "NODE_ENV=test npm-run-all --parallel start cy-open",
    "cy-run": "cypress run",
    "cy-open": "cypress open",
    "build": "NODE_ENV=production npm-run-all build-code mk-build copy-files pkg",
    "build-code": "npm-run-all  build-js build-server",
    "build-js": "npm run build --prefix client",
    "build-server": "npm run build --prefix server",
    "mk-build": "mkdir -p build",
    "copy-files": "npm-run-all  copy-server copy-client copy-package",
    "copy-server": "cp -R ./server/build/. build",
    "copy-client": "cp -R ./client/build/. build",
    "copy-package": "cp package.json build/package.json",
    "pkg": "NODE_ENV=production  pkg build/package.json",
    "zip": "mkdir -p zips && zip -r zips/thorium-macos.zip thorium-macos && zip -r zips/thorium-win.exe.zip thorium-win.exe && zip -r zips/thorium-linux.zip thorium-linux",
    "bump": "node ./scripts/bumpVersion.js",
    "sentry-upload": "node ./scripts/sentryFiles.js",
    "cloc": "cloc . --exclude-dir=node_modules,config,scripts,build-server,snapshots,coverage,build --exclude-ext=css,json",
    "translate": "babel-node scripts/manageTranslations.js",
    "upload": "node scripts/uploadTos3.js",
    "deploy": "npm-run-all build zip upload sentry-upload clean-build",
    "precommit": "lint-staged",
    "add-contributor": "all-contributors add",
    "generate-contributor": "all-contributors generate",
    "plop": "plop"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@sentry/node": "^4.6.3",
    "apollo-cache-hermes": "^0.8.8",
    "apollo-server": "^2.4.6",
    "apollo-server-express": "^2.4.6",
    "appdirectory": "^0.1.0",
    "bonjour": "^3.5.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-status-monitor": "^1.2.3",
    "graphql": "^14.1.1",
    "graphql-server-express": "^1.4.0",
    "graphql-subscriptions": "^1.0.0",
    "graphql-tools": "^4.0.4",
    "graphql-type-json": "^0.2.1",
    "graphqurl": "^0.3.2",
    "heap-api": "^1.0.1",
    "luxon": "^1.11.3",
    "multer": "^1.4.1",
    "ncp": "^2.0.0",
    "node-fetch": "^2.3.0",
    "random-words": "^1.1.0",
    "react-dev-utils": "^7.0.3",
    "subscriptions-transport-ws": "^0.9.15",
    "three": "^0.101.1",
    "unzip": "^0.1.11",
    "yauzl": "^2.10.0",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-stage-3": "^7.0.0",
    "all-contributors-cli": "^6.1.2",
    "babel-eslint": "^10.0.1",
    "babel-plugin-react-intl": "^3.0.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cypress": "^3.1.5",
    "cypress-testing-library": "^2.3.6",
    "dotenv": "^6.2.0",
    "eslint": "^5.14.1",
    "eslint-config-react-app": "^3.0.7",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.2.0",
    "glob": "^7.1.3",
    "inquirer-file-path": "^1.0.1",
    "inquirer-recursive": "0.0.6",
    "is-ci": "^2.0.0",
    "lint-staged": "^8.1.4",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.3.7",
    "plop": "^2.2.1",
    "prettier": "^1.16.4",
    "progress": "^2.0.3",
    "react-intl-translations-manager": "^5.0.3",
    "s3": "^4.4.0",
    "sentry-files": "^1.0.1",
    "start-server-and-test": "^1.7.11"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "bin": "./server.js",
  "pkg": {
    "assets": [
      "assets/**/*",
      "snapshot.json",
      "index.html",
      "css/**/*",
      "fonts/**/*",
      "js/**/*",
      "static/**/*",
      "cardIcons/**/*",
      "systems/**/*",
      "viewscreen/**/*",
      "sciences.ogg",
      "favicon.ico"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "eslint-plugin-cypress",
      "react-hooks"
    ],
    "env": {
      "cypress/globals": true
    },
    "rules": {
      "jsx-a11y/href-no-hash": "off",
      "react-hooks/rules-of-hooks": "error"
    }
  }
}
